<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
    </style>-->

    <style name="Theme.MyTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.TranslucentStatus">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accent</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_primary_text">@color/colorPrimaryText</item>
        <item name="material_drawer_selected_text">@color/colorPrimary</item>

    </style>

    <style name="toolbar_oneaccess" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:color">#fafafa</item>
    </style>

    <style name="toolbar_pre_configuration_subtitle">
        <item name="android:textColor">#fafafa</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="toolbar_pre_configuration_title">
        <item name="android:textColor">#fafafa</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="loginPreview">
        <item name="android:background">@color/backgroundSplash</item>
        <item name="android:padding">30dp</item>
    </style>

    <color name="colorPrimaryText">#FFF</color>
</resources>
