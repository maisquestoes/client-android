<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
    </style>-->

    <style name="MainStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accent</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_primary_text">@color/colorPrimaryText</item>
        <item name="material_drawer_selected_text">@color/colorPrimary</item>

    </style>

    <style name="SigninPreview" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/backgroundSplash</item>
        <item name="colorPrimaryDark">@color/backgroundSplashDark</item>
    </style>

    <style name="statusbar_transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="toolbar_transparent" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="preconfiguration_textview">
        <item name="android:textColor">#fafafa</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="signinPreview">
        <item name="android:background">@color/backgroundSplash</item>
        <item name="android:padding">30dp</item>
    </style>

    <color name="colorPrimaryText">#FFF</color>
</resources>
