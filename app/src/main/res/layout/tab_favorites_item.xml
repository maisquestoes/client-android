<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_favorite_card_subjects"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/rl_subject">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:id="@+id/iv_favorite_subject"
                android:background="@android:color/darker_gray"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/ic_dots"
                android:textColor="@color/white"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_favorite_subject"
                    android:textSize="12dp"
                    android:text="Administração"
                    android:textColor="@color/card_subject"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_favorite_subject_description"
                    android:textSize="10dp"
                    android:text="Todos os conteúdos"
                    android:textColor="@color/card_subject_description"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_favorite_icon_like"
                    android:adjustViewBounds="true"
                    android:scaleType="fitEnd"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_margin="15dp"
                    android:src="@mipmap/ic_thumbs_up_down"
                     />

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_subject_favorite"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:max="100"
            android:progress="30"
            android:progressDrawable="@drawable/progress_subjects_done"
            android:secondaryProgress="0" />


    </LinearLayout>

</LinearLayout>