<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/signinPreview">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/newlogo2"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:paddingBottom="34dp"
            android:text="Nunca foi tão fácil aprender"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22sp"
            android:paddingBottom="34dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="MAIS QUESTÕES"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_login_preview_enter"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@string/str_login_preview_enter"/>

            <Button
                android:id="@+id/btn_login_preview_signup"
                android:layout_width="0px"
                android:layout_height="50dp"
                android:layout_weight="1.5"
                android:text="@string/str_login_preview_signup"/>

        </LinearLayout>

        <com.facebook.login.widget.LoginButton
            xmlns:facebook="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btn_login_preview_fb"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            facebook:com_facebook_login_text="INICIAR COM FACEBOOK"
            facebook:com_facebook_logout_text="LOGOUT"
            />

    </LinearLayout>

</RelativeLayout>